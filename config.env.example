# =============================================================================
# CONFIGURATION ENVIRONNEMENT - PORTFOLIO ITSSGHIR
# =============================================================================
# Copiez ce fichier vers .env et ajustez les valeurs selon votre environnement

# Configuration générale
ENVIRONMENT=production
DOMAIN=anas.itssghir.com

# Configuration Docker
BUILD_CACHE=true
BACKUP_ENABLED=true
HEALTH_CHECK_TIMEOUT=60
LOG_LEVEL=info

# Configuration Backend API
OPENAI_API_KEY=your_openai_api_key_here
PORT=3000
NODE_ENV=production

# Configuration Frontend
VITE_API_URL=https://anas.itssghir.com/api
VITE_ENVIRONMENT=production

# Configuration Traefik (si utilisé)
TRAEFIK_NETWORK=proxy
CERTRESOLVER=cloudflare

# Configuration de monitoring
MONITORING_ENABLED=true
MONITORING_INTERVAL=300

# Configuration de sauvegarde
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=./backups

# Configuration de sécurité
CORS_ORIGIN=https://anas.itssghir.com
API_RATE_LIMIT=100

# Configuration base de données (si ajoutée plus tard)
# DATABASE_URL=
# REDIS_URL=

# Configuration email (si notification ajoutée plus tard)
# SMTP_HOST=
# SMTP_PORT=
# SMTP_USER=
# SMTP_PASS= 